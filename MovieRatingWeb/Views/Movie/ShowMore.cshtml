@model List<MovieRatingWeb.Models.CommentModel>

<!DOCTYPE html>
<html>
<head>
    <title>Movie Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: black;
            color: white;
        }

        li{
            list-style: none;
        }
        .bn{
            border: 2px solid gold;
            background: transparent;
            color: gold;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <div class='container'>
        <div class="row justify-content-between">
            <div class="mb-5 col">
                <div class="mb-4 display-4 font-weight-bold">Breaking Bad</div>
                <div class="text-gray-400">
                    <ul class="list-inline">
                        <li class="list-inline-item mr-3">2023</li>
                        <li class="list-inline-item mr-3">|</li>
                        <li class="list-inline-item">45 Min</li>
                    </ul>
                </div>
            </div>
            <div class="mt-5 col">
                <div class="h1">
                    <ul class="d-flex">
                        <li><span class="text-warning pb-2">★</span></li>
                        <li>9.5</li>
                        <li><span class="text-muted mr-4">/10</span></li>
                        <li><span class="text-primary">Rate</span></li>
                        <li><span class="text-primary">☆</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row d-flex mb-3">
            <img class='img-fluid mr-4' style='height: 380px; width: 240px; object-fit: cover; object-position: top;' src="~/images/BB.jpg" alt="Poster" />
            <img class='img-fluid' style='height: 380px; width: max-content; object-fit: cover; object-position: top;' src="~/images/Backdrop_BB.jpg" alt="Backdrop" />
        </div>

        <div class="mb-4">
              <button class="bn">Action</button>
              <button class="bn">Adventure</button>
              <button class="bn">Science Fiction</button>
        </div>
        <div class='row'>
            <div class='col-9'>
                <div>
                    <div class='font-weight-bold h4'>
                        Overview :
                    </div>
                    <div class="mb-4">
                        Walter White, a New Mexico chemistry teacher, is diagnosed with Stage III cancer and given a prognosis of only two years left to live. He becomes filled with a sense of fearlessness and an unrelenting desire to secure his family's financial future at any cost as he enters the dangerous world of drugs and crime.
                    </div>
                    <div>
                        <hr />
                        <div class='my-2 d-flex'>
                            <div class='font-weight-bold mr-2'>
                                Director: 
                            </div>
                            <div>
                                Michelle MacLaren
                            </div>
                        </div>
                        <hr />
                        <div class='my-2 d-flex'>
                            <div class='font-weight-bold mr-2'>
                                Cast :
                            </div>
                            <div class=''>
                                Bryan Cranston Aaron Paul Anna Gunn Dean Norris Jonathan Banks
                            </div>
                        </div>
                        <hr />
                        <div class='my-2 d-flex'>
                            <div class='font-weight-bold mr-2'>
                                Tag Line :
                            </div>
                            <div class=''>
                                tag line is this
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
            <div class='col-3 border-left'>
                <div>
                    <div class='font-weight-bold h5'>
                        Status
                    </div>
                    <div class='text-primary'>
                        finished
                    </div>
                </div>
                <div>
                    <div class='font-weight-bold h5'>
                        Original Language
                    </div>
                    <div class='text-primary'>
                        English
                    </div>
                </div>
                <div>
                    <div class='font-weight-bold h5'>
                        Total Seasons
                    </div>
                    <div class='text-primary'>
                        5
                    </div>
                </div>
                <div>
                    <div class='font-weight-bold h5'>
                        Total Episodes
                    </div>
                    <div class='text-primary'>
                        62
                    </div>
                </div>

            </div>
        </div>
        <div class='position-relative mt-5' style='width: 75%;'>
            <div class='d-flex align-items-center mb-4'>
                <div class="border-left border-warning pl-2">
                    <span class="font-weight-bold h3">Reviews</span>
                    <span class="ml-1">></span>
                </div>
                <div class='position-absolute' style='right: 0;'>
                    <button class='btn btn-primary'>Give Review</button>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div>
                    <h2>Comments</h2>
                    @foreach (var comment in Model)
                    {
                        <div>
                            <p>User: @comment.User.UserName</p>
                            <p>Comment: @comment.Text</p>
                            <p>Posted at: @comment.PostedAt</p>
                            <hr />
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No comments available.</p>
            }

            <form method="post" asp-controller="Movie" asp-action="AddComment">
                <div>
                    <input type="text" name="Text" id="Text" placeholder="Your comment"/>
                </div>
                <div>
                    <button type="submit" class='btn btn-primary'>Submit</button>
                </div>
            </form>
                   
            <div class='d-flex justify-content-center'>
                <button class='btn btn-primary'>Show More</button>
            </div>
        </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </div>
</body>
</html>
