@model List<MovieRatingWeb.Models.Tv>

<!DOCTYPE html>
<html>
<head>
<title>Explore TV Series</title>
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/newFile.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-dsiAopxH8C0+fqPo5kRld0rAq6Lqz6g4ls4cwqsQ5T2u8hLOUq6XqUVCYbANtbEwS/ogQ1Rbvv3y/6dP3W2pDA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: black;
            color: white
        }
    </style>
</head>

<body>
    <h1 class="mb-3">Explore TV Series</h1>
    <div class="mb-4">

        <select id="genre">
            <option value="action"><b>Genre</b></option>
            <option value="action">Action</option>
            <option value="adventure">Adventure</option>
            <option value="animation">Animation</option>
            <option value="comedy">Comedy</option>
            <option value="crime">Crime</option>
            <option value="documentary">Documentary</option>
            <option value="drama">Drama</option>
            <option value="family">Family</option>
            <option value="fantasy">Fantasy</option>
            <option value="history">History</option>
            <option value="horror">Horror</option>
            <option value="music">Music</option>
            <option value="mystery">Mystery</option>
            <option value="romance">Romance</option>
            <option value="science_fiction">Science Fiction</option>
            <option value="tv_movie">TV Movie</option>
            <option value="thriller">Thriller</option>
            <option value="war">War</option>
            <option value="western">Western</option>
        </select>

        <select id="genre">
            <option value="action">Language</option>
            <option value="action">English</option>
            <option value="adventure">Hindi</option>
            <option value="animation">Japanese</option>
            <option value="comedy">Gujarati</option>
            <option value="crime">French</option>
            <option value="documentary">Korean</option>

        </select>
    </div>


    @{
        var movies = Model.ToList();
        var numberOfColumns = 5;
        var numberOfRows = (int)Math.Ceiling((double)movies.Count / numberOfColumns);
    }

    @for (int i = 0; i < numberOfRows; i++)
    {
        <div class="d-flex d-grid">
            @for (int j = i * numberOfColumns; j < (i + 1) * numberOfColumns && j < movies.Count; j++)
            {
                <div class="relative" style="width: 200px; height: 350px;">
                    <img class="w-full object-cover object-top rounded-tr-md rounded-tl-md" src="https://image.tmdb.org/t/p/original/@movies[j].poster_path" alt="@movies[j].name" style="height: 250px;" />
                    <div class="w-full bg-gray-500 rounded-bl-md rounded-br-md p-2 text-white flex flex-col" style="height: 100px;">
                        <div class="flex items-center mb-1">
                            <span class="text-yellow-500 mr-1">★</span>
                            <span class="text-sm mr-1">@movies[j].vote_average</span>
                            <span class="text-blue-500 ml-auto">☆</span>
                        </div>
                        <p class="text-md font-bold">@movies[j].name</p>
                    </div>
                </div>
            }
        </div>
    }
<button type="button" class="btn btn-warning" style="display:flex;justify-content: center; align-items: center;margin: 0">Load More</button>
</body>
</html>